    div(class="col")
        div(class="row")
            div(class="col")
                p мои сертификаты
        div(class="row")
            div(class="col-2")

            mixin certificate(certLogo)
                div(class="col-2")
                    img(src="./../img/certificate-" + certLogo)

            +certificate('1.png')
            +certificate('2.png')
            +certificate('3.png')
            +certificate('4.png')

            div(class="col-2")

